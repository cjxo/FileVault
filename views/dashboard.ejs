<!DOCTYPE html>

<html lang="en-US">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/styles.css">
    <script src="/js/dashboard.js" defer></script>
    <title>FileVault | Dashboard</title>
  </head>

  <body>
    <main class="fv-dashboard">
      <%- include('dashboard-sidebar.ejs', { includeAddFile: true, includeAddFolder: false }) %>
      <section class="fv-display-section">
        <header class="fv-display-header">
          <form class="fv-search">
            <input type="text" name="fv_search" placeholder="search file..." />
            <button class="fv-search-btn">
              <svg>
                <use xlink:href="#fv-search-svg-sym" />
              </svg>
            </button>
          </form>

          <div class="fv-profile-area">
            <div>
              <img src="/icons/face-woman-profile.svg" alt="logout" width="32px" height="32px">
            </div>
          </div>
        </header>
       
        <h3>Recent Files</h3>
        <ul class="fv-file-lister-box fv-recent-files-lister">
        </ul>
        <div class="fv-uploaded-files-header">
          <h3>Uploaded Files</h3>
          <div>
            <div class="fv-page-dropdown fv-dd-folder">
              <% if (folders.length) { %>
                <% folders.forEach(folder => { %>
                  <button><%= folder.name %></button>
                <% }); %>
              <% } else { %>
              <p style="color: grey;">You have no folders </p>
              <% } %>
            </div>

            <div class="fv-page-dropdown fv-dd-general">
              <button>
                <svg>
                  <use xlink:href="#fv-file-delete-sym"/>
                </svg>
                <p>Delete</p>
              </button>
              <button>
                <svg>
                  <use xlink:href="#fv-file-folder-sym"/>
                </svg>
                <p>Add To Folder</p>
              </button>
            </div>
            <button style="display:none">
              <img src="/icons/dots-vertical.svg" alt="options" />
            </button>
          </div>
        </div>
        <div class="fv-file-lister">
          <div class="fv-file-lister-entry">
            <button>Name</button>
            <ul class="fv-file-list">
            </ul>
          </div>
          
          <div class="fv-file-lister-entry">
            <button>Type</button>
            <ul class="fv-file-list">
            </ul>
          </div>

          <div class="fv-file-lister-entry">
            <button>Size</button>
            <ul class="fv-file-list">
            </ul>
          </div>

          <div class="fv-file-lister-entry">
            <button>Shared</button>
            <ul class="fv-file-list">
            </ul>
          </div>

          <div class="fv-file-lister-entry">
            <button>Uploaded</button>
            <ul class="fv-file-list">
            </ul>
          </div>
        </div>

      </section>
    </main>
  </body>

