<!DOCTYPE html>

<html lang="en-US">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/styles.css">
    <script src="/js/dashboard-folder-view.js" defer></script>
    <title>FileVault | Dashboard - Folder </title>
  </head>

  <body>
    <main class="fv-dashboard">
      <%- include('dashboard-sidebar.ejs', { includeAddFile: false, includeAddFolder: false }) %>
      <section class="fv-display-section">
        <div class="fv-page-title-div">
          <div class="fv-page-title-left">
            <h1 class="fv-page-title">Folder View</h1>
            <span>|</span> 
            <span><%= folder.name %></span>
          </div>

          <div class="fv-page-title-right">
            <div class="fv-page-dropdown">
              <a>Hi</a>
            </div>
            <button>
              <img src="/icons/dots-vertical.svg" alt="vertical dots" />
            </button>
          </div>
        </div>
        
        <div class="fv-folder-display-grid">
          <% folder.files.forEach(file => { %>
          <a href="/dashboard/files/<%= file.file_id %>" class="fv-folder-entry">
            <input type="checkbox" />
            <svg>
              <use xlink:href="#fv-file-svg-sym" />
            </svg>
            <h3><%= file.name %></h3>
          </a>
          <% }); %> 
        </div>
      </section>
    </main>
  </body>
  
